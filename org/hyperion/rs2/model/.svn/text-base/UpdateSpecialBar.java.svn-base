public class UpdateSpecialBar {

	public static void specialPower(Player p) {
		if(p.specialPower >= 100) {
			setSpecials100(p);
		} else if(p.specialPower >= 90) {
			setSpecials90(p);
		} else if(p.specialPower >= 80) {
			setSpecials80(p);
		} else if(p.specialPower >= 70) {
			setSpecials70(p);
		} else if(p.specialPower >= 60) {
			setSpecials60(p);
		} else if(p.specialPower >= 50) {
			setSpecials50(p);
		} else if(p.specialPower >= 40) {
			setSpecials40(p);
		} else if(p.specialPower >= 30) {
			setSpecials30(p);
		} else if(p.specialPower >= 20) {
			setSpecials20(p);
		} else if(p.specialPower >= 10) {
			setSpecials10(p);
		} else {
			setSpecials0(p);
		}
		refreshSendQuest(p);
	}
	
	private static int sendQuests[] = { 12335, 7586, 7611, 7561, 8505, 7511};
	
	public static void refreshSendQuest(Player p) {
		String color = "";
		if(p.specOn)
			color = "@blu@";
		for(int i = 0; i < sendQuests.length; i++) {
			p.getActionSender().sendString( sendQuests[i],color+"S P E C I A L  A T T A C K");
		}
	}
	
	
